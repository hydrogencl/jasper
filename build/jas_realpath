#! /usr/bin/env bash

if [ $# -ne 1 ]; then
	echo "bad usage: no path specified"
	exit 1
fi

path="$1"
if ! command -v python &> /dev/null; then 
    python3 -c 'import os,sys;print(os.path.realpath(sys.argv[1]))' "$path"
else
    python -c 'import os,sys;print(os.path.realpath(sys.argv[1]))' "$path"
fi
